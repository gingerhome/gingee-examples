    { "path": "/api/tasks/:taskId", "method": "DELETE", "script": "api/tasks/delete.js" },

    { "path": "/api/dashboard/stats", "method": "GET", "script": "api/dashboard/stats.js" },
    { "path": "/api/dashboard/tasks-by-assignee", "method": "GET", "script": "api/dashboard/tasks-by-assignee.js" },
    { "path": "/api/dashboard/leaderboard", "method": "GET", "script": "api/dashboard/leaderboard.js" }
  ]
}
