{
  "routes": [
    { "path": "/api/auth/register", "method": "POST", "script": "api/auth/register.js" },
    { "path": "/api/auth/login", "method": "POST", "script": "api/auth/login.js" },
    { "path": "/api/auth/logout", "method": "POST", "script": "api/auth/logout.js" },
    { "path": "/api/auth/me", "method": "GET", "script": "api/auth/me.js" },

    { "path": "/api/users/list", "method": "GET", "script": "api/users/list.js" },
    { "path": "/api/users/create", "method": "POST", "script": "api/users/create.js" },
    { "path": "/api/users/me/password", "method": "PUT", "script": "api/users/change-password.js" },
    { "path": "/api/users/:userId", "method": "DELETE", "script": "api/users/delete.js" },

    { "path": "/api/tasks", "method": "GET", "script": "api/tasks/list.js" },
