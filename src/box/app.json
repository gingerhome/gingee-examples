{
  "name": "Ginger JS Test Suite",
  "description": "This is test suite for Ginger JS",
  "version": "1.0.0",
  "db": [
    {
      "type": "postgres",
      "name": "testpostgresdb",
      "host": "localhost",
      "port": 5432,
      "user": "postgres",
      "password": "postgres",
      "database": "gingertestdb",
      "min": 2,
      "max": 10
    },
    {
      "type": "sqlite",
      "name": "testsqlitedb",
      "database": "data/testdb.sqlite"
    },
    {
      "type": "mysql",
      "name": "testmysqldb",
      "host": "localhost",
      "port": 3306,
      "user": "root",
      "password": "mysql",
      "database": "gingertestdb",
      "max": 10,
      "queueLimit": 0,
      "waitForConnections": true
    }
  ],
  "startup_scripts": [
    "sample-app-startup.js"
  ],
  "default_include": [
    "sample-app-include.js"
  ],
  "env": {
    "MY_ENV_VAR": "app specific environment variable"
  },
  "jwt_secret": "gingerjs_is_awesome",
  "cache": {
    "client": {
      "enabled": false,
      "no_cache_regex": []
    },
    "server": {
      "enabled": false,
      "no_cache_regex": [
        "/.*/try/.*"
      ]
    }
  }
}
